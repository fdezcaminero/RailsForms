<form accept-charset="UTF-8" action="/users" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label for="username">Username:</label>
    <br>
    <input id="username" name="user[username]" type="text" placeholder="Enter your username"/>
    <br>
    <label for="email">Email:</label>
    <br>
    <input id="email" name="user[email]" type="email" placeholder="Enter your email"/>
    <br>
    <label for="password">Password:</label>
    <br>
    <input id="password" name="user[password]" type="password" placeholder="Password"/>
    <br>
    <input name="commit" type="submit" value="Sign up" />
</form>
